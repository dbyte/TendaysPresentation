{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES6", "DOM", "ES2017.object"],
        "moduleResolution": "node",
        "typeRoots": [],
        "outDir": "./out/js",
        "removeComments": true,
        "sourceMap": true,
        
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "include": ["./src"],
    "exclude": ["./out/js", "./node_modules"]
}