{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./out/js",
        "removeComments": true,
        "sourceMap": true,
        
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "include": ["./src"],
    "exclude": ["./out/js"]
}